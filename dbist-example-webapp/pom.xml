	<distributionManagement>
		<repository>
			<id>googlecode-repo-m2-releases</id>
			<url>svn:https://repo-m2.googlecode.com/svn/releases</url>
		</repository>
		<snapshotRepository>
			<id>googlecode-repo-m2-snapshots</id>
			<url>svn:https://repo-m2.googlecode.com/svn/snapshots</url>
		</snapshotRepository>
	</distributionManagement>
</project>
